<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifi_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wifi_title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="8dp" />

    <!-- Refresh to rescan networks -->
    <Button
        android:id="@+id/btn_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan_networks" />

    <!-- Spinner shows SSIDs discovered -->
    <Spinner
        android:id="@+id/spinner_ssids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginTop="12dp" />

    <!-- Password for secured networks -->
    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password_hint"
        android:inputType="textPassword"
        android:layout_marginTop="12dp" />

    <!-- Connect button -->
    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="connect"
        android:layout_marginTop="16dp" />

    <!-- Progress + status -->
    <ProgressBar
        android:id="@+id/progress_connecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="status_idle"
        android:layout_marginTop="8dp" />
</LinearLayout>
